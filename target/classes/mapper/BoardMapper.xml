<mapper namespace="com.koreait.alsamo.board.BoardMapper">
    <insert id="insBoard">
        INSERT INTO t_board
            (iboard, bcode, iuser, title, content,gNo)
        VALUES
        ((SELECT NEXTVAL(iboard_seq)),#{bcode},#{iuser},#{title},#{content},(SELECT LASTVAL(iboard_seq)))
    </insert>

